{% extends "base.jinja" %}

{% block title %}{{ topic.name }} - Topic Details{% endblock %}

{% block body %}
<p>Back to <a
          class="underline text-blue-400"
          href="{{ request.url_for('get_textbook', textbook_guid=textbook.guid) }}"
          >{{ textbook.title }}</a>
</p>
  <div class="max-w-4xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-8">
    <!-- Topic header -->
    <div class="mb-8">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">{{ topic.name }}</h1>
      <div class="flex flex-wrap gap-4 text-sm text-gray-600">
        <div>
          <span class="font-medium">Authors:</span> {{ topic.authors }}
        </div>
        <div>
          <span class="font-medium">License:</span> {{ topic.license }}
        </div>
      </div>
    </div>

    <!-- Topic form content -->
    <div class="space-y-8">
      <!-- Topic Outcomes -->
      <section>
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">Topic Outcomes</h2>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
          <div class="prose max-w-none">
            {{ markdown_to_html(topic.outcomes) | safe }}
          </div>
        </div>
      </section>

      <!-- Topic Summary -->
      <section>
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">Topic Summary</h2>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
          <div class="prose max-w-none">
            {{ markdown_to_html(topic.summary) | safe }}
          </div>
        </div>
      </section>

      <!-- Topic Sources -->
      <section>
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">Topic Sources</h2>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
          <div class="prose max-w-none">
            {{ markdown_to_html(topic.sources) | safe }}
          </div>
        </div>
      </section>

      <!-- Topic Authors -->
      <section>
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">Topic Authors</h2>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
          <div class="prose max-w-none">
            {{ markdown_to_html(topic.authors) | safe }}
          </div>
        </div>
      </section>
    </div>
  </div>
{% endblock %}
