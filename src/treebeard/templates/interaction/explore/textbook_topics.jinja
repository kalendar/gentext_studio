{% extends "base.jinja" %}

{% block title %}Select a Topic{% endblock %}

{% block body %}
<p><a class = "underline text-blue-400" href="{{ request.url_for('get_textbooks') }}">Library</a> > Topics</p>

  <div class="max-w-5xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-8">
    <div class="mb-5 flex flex-col sm:flex-row w-full items-center justify-between gap-2 sm:gap-0">
      <h1 class="text-2xl sm:text-3xl font-bold text-center w-full">Select a Topic</h1>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {% for topic in textbook.topics | sort(attribute="name") %}
        <card.Topic :topic="topic" :textbook="textbook" :request="request" />
      {% endfor %}
    </div>
  </div>
{% endblock %}
