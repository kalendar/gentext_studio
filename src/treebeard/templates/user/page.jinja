{% extends "base.jinja" %}

{% block title %}Generative Textbook Studio{% endblock %}

{% block body %}
  <div class="central-content">
    <h1>Generative Textbook Studio</h1>
    <p class="font-light text-gray-500">
      Currently logged in as: {{ current_user.email }}
    </p>

    <br />

    <h2 class="mb-3">Study</h2>
    <div class="grid grid-cols-2 gap-5">
      <Card :href="{{ request.url_for('saved_textbooks') }}">
        <p class="underlined">Your Saved Generative Textbooks</p>
      </Card>

      <Card :href="{{ request.url_for('get_textbooks') }}">
        <p class="underlined">Browse All Generative Textbooks</p>
      </Card>
    </div>

    <br />

    <h2 class="mb-3">Create</h2>
    <div class="grid grid-cols-2 gap-5">
      <Card :href="{{ request.url_for('textbooks') }}">
        <p class="underlined">Create or Update a Generative Textbook</p>
      </Card>
    </div>

    <select
      name="chat_service"
      id="chat_service"
      hx-post="{{ request.url_for('save_chat_service') }}"
      hx-swap="none"
      hx-trigger="change">
      <option
        value="integrated"
        {{ 'selected' if current_user.chat_service.name == "integrated" }}>
        Integrated
      </option>
      <option
        value="https://chatgpt.com/"
        {{ 'selected' if current_user.chat_service.name == "chatgpt" }}>
        ChatGPT
      </option>
      <option
        value="https://claude.ai/new"
        {{ 'selected' if current_user.chat_service.name == "claude" }}>
        Claude
      </option>
      <option
        value="https://gemini.google.com/app"
        {{ 'selected' if current_user.chat_service.name == "gemini" }}>
        Gemini
      </option>
      <option
        value="https://copilot.microsoft.com/"
        {{ 'selected' if current_user.chat_service.name == "copilot" }}>
        Copilot
      </option>
    </select>
  </div>
{% endblock %}
