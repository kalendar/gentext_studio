{% extends "base.jinja" %}

{% block title %}Login{% endblock %}

{% block body %}

<!-- Hero Section -->
<div class="mx-auto mt-10 flex max-w-5xl items-center justify-between gap-10 px-6 py-16">
  <!-- Text Column -->
  <div class="flex-1">
    <p class="text-6xl font-extrabold leading-tight text-gray-900">
      Stop Reading,
      Start Engaging.
    
    <p class="mt-6 text-lg text-gray-700">
      The textbook generated in real-time, specifically for you.
      No-code tools so every instructor can author.
      Free and open source, with support for open licensing and attribution.
    </p>
  </div>

  <!-- Image Column -->
  <div class="flex-1">
    <img src="/static/img/gentext_studio.png" alt="Hero Image" class="w-full max-w-md" />
  </div>
</div>

<div class="mx-auto mt-10 flex w-[80ch] flex-row gap-2 justify-center">

  <AButton :href="{{ request.url_for('get_textbooks') }}" class="rounded-xl p-5 text-xl font-semibold text-white" color="blue">
    Start Learning
    <img class="inline-block h-5" src="https://cdn.simpleicons.org/read.cv/white" />
  </AButton>

  {% if SETTINGS.google_oauth %}
  <AButton :href="{{ request.url_for('login_via_google') }}" class="rounded-xl p-5 text-xl font-semibold text-black"
    color="gray">
    Google
  </AButton>
  {% endif %}

  {% if SETTINGS.github_oauth %}
  <AButton :href="{{ request.url_for('login_via_github') }}" class="rounded-xl p-5 text-xl font-semibold text-black"
    color="gray">
    Login to Author
    <img class="inline-block h-5" src="https://cdn.simpleicons.org/github/black" />
  </AButton>
  {% endif %}
</div>
{% endblock %}
