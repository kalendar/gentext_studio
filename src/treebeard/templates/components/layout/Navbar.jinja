{# def request #}

<nav
  class="h-nav-height border-b-2 border-b-sky-600 bg-sky-500 px-5"
  hx-boost="true">
  <ul
    class="flex h-full items-center justify-between gap-5 text-white [&_a]:decoration-white [&_a]:decoration-2">
    <li>
          {% if request.session.get("user_email") %}
            <a class="underlined" href="{{ request.url_for('current_user') }}"
              >GenText Studio : User Home</a
            >
          {% else %}
          <a class="underlined" href="{{ request.url_for('login') }}"
            >GenText Studio</a
          >
          {% endif %}
    </li>

    <li class="flex gap-5">
      {% if SETTINGS.authorization %}
        <li>
          {% if request.session.get("user_email") %}
            <a class="underlined" href="{{ request.url_for('logout') }}"
              >Logout</a
            >
          {% else %}
                    {% if SETTINGS.google_oauth %}
                    <a class="underlined" href="{{ request.url_for('login_via_google') }}" data-hx-boost="false">Login</a>
                    {% endif %}
          {% endif %}
        </li>
      {% endif %}
    </li>
  </ul>
</nav>
