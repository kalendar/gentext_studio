{% extends "base.jinja" %}

{% block title %}OELM - Select Textbook{% endblock %}
{% block body %}
  <div class="container">
    <h2>Select a Textbook</h2>
    <div class="textbooks">
      {% for textbook in textbooks %}
        <div
          hx-get="{{ }}"
          hx-target="body"
          hx-push-url="true"
        >
          <h3>{{ textbook.title }}</h3>
        </>
      {% endfor %}
    </div>
  </div>
{% endblock %}
